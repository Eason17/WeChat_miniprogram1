/* pages/team_detail/team_detail.wxss */
page {
    background-color: rgba(245, 245, 245);
}

image {
    border-radius: 100%;
}

.items .img1 {
    margin: 20rpx 0;
    width: 100%;
    display: flex;
}

.img1 image {
    height: 200rpx;
    width: 200rpx;
    margin: auto;
}

.items .text1 {
    text-align: center;
    margin-bottom: 30rpx;
}

.top {
    margin-top: 0;
    margin-bottom: 5rpx;
    border-bottom: 1rpx solid rgba(220, 220, 220);
}

.title {
    font-size: 35rpx;
    font-weight: 400;
    background-color: white;
    border-bottom: 1rpx solid rgba(240, 240, 240);
    height: 50rpx;
    padding: 7rpx 10rpx;
}

.item {
    background-color: white;
    padding: 15rpx 25rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e0e0e0;
}

.item .img {
    height: 125rpx;
    width: 125rpx;
    margin-right: 20rpx;
    margin-left: -5rpx;
}

.item image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.item .tags {
    display: flex;
    margin: 12rpx 0 0 0;
}

.item .tag {
    padding: 8rpx;
    margin: 0 5rpx;
    border: 1rpx solid rgb(255, 255, 255);
    background: rgb(89, 215, 224);
    color: rgb(255, 255, 255);
    border-radius: 90%;
    font-size: 23rpx;
}

.item .position {
    color: white;
    position: absolute;
    text-align: center;
    right: 60rpx;
    width: 100rpx;
    border: 1rpx solid;
    background-color: green;
}

.button {
    width: 100%;
    position: absolute;
    bottom: 30rpx;

}