page {
  height: 100%;
}

.header {
  width: 100%;
  height: 110rpx;
  padding: 10rpx;
  background-color: var(--themeColor);
  display: inline-flex;
  justify-content: start;
  align-items: center;
}

.type {
  height: 100%;
  flex: 1;
  margin-left: 15rpx;
  /* margin-right: -35rpx; */
  /* display: flex;
  justify-content: center;*/
  align-items: center;
  color: white;
}

.icon-icon-1 {
  font-size: 65rpx;
  font-weight: bold;
}

.search_input {
  height: 75rpx;
  flex: 10;
  padding: 0 14rpx;
  margin: 13rpx 30rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  background-color: #fff;
  border-radius: 17rpx;
  color: gray;
}

.index_swiper swiper {
  width: 750rpx;
  height: 350rpx;
}

.index_swiper swiper image {
  width: 100%;
  height: 350rpx;
}

.categorys {
  display: flex;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 9999;
}

.categorys .cates {
  width: 160rpx;
}

.categorys .cates view {
  background-color: snow;
  border: 1rpx solid rgba(221, 218, 218, 0.8);
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: -3rpx;
}

.categorys .cates .active {
  font-weight: bold;
  border-left: 5rpx solid currentColor;
}

.categorys .sub_cates {
  float: left;
}

.categorys .sub_cates .sub_cate {
  display: flex;
  background-color: snow;
  width: 160rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin: -3rpx;
}

.items {
  background-color: rgb(235, 235, 235);
}

.items .item {
  padding: 20rpx 35rpx;
  border-bottom: 1rpx solid #e8e8e8;
  background-color: white;
  margin: 0 2rpx 25rpx 2rpx;
}

.items .item image {
  height: 240rpx;
}

.tabs_title {
  background-color: rgb(240, 240, 240);
  width: 100%;
  display: flex;
  margin: 0rpx 0 -5rpx 0;
  padding: 10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title_item {
  font-weight: bold;
  flex: 1;
  text-align: center;
  border-style: none solid;
  border-width: 3.4rpx;
  border-color: rgba(200, 200, 200, 0.8);
}

.active {
  color: rgb(85, 193, 243);
  border-bottom: 1rpx solid currentColor;
}

.active2 {
  color: rgb(6, 110, 207);
  /* border-bottom: 1rpx solid currentColor; */
}

.tabs {
  background-color: white;
  position: sticky;
  top: 0;
  border-style: solid;
  border-color:
    rgb(230, 230, 230);
  border-width: 3.8rpx;

}

/* .tags {
  display: flex;
} */

.tag {
  margin: 0 25rpx 0 0;
  float: left;
}


.tags .time {
  margin-left: 500rpx;
  opacity: 0.85;
  color: gray;
}

.tags .title {
  float: left;
  font-weight: 700;
  flex: 1;
}

.tags .comp {
  color: darkcyan;
  float: left;
}

