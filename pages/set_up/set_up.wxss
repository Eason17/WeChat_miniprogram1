.logo_choose {
    margin: 20rpx 0;

}

.logo_choose .img {
    display: flex;
    text-align: center;
    justify-items: center;
}

.logo_choose .img image {
    margin: 0 auto 10rpx;
    width: 235rpx;
    height: 235rpx;
    border-radius: 50%;
}

.img_text {
    text-align: center;
}

.info_item {
    background-color: white;
    height: 85rpx;
    padding: 20rpx 25rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    border-bottom: 1rpx solid #e0e0e0;
}

button {
    margin: 60rpx auto 0;
}