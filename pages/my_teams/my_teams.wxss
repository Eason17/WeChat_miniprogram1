/* pages/my_team/my_team.wxss */
page {
    height: max-content;
    background-color: rgba(245, 245, 245)
}

.title {
    display: flex;
    background-color: #fbfbff;
    border-bottom: 3rpx solid #adaaaa;
    height: 50rpx;
    padding: 5rpx;
}

.title .search {
    position: absolute;
    right: 50rpx;
}

.title .choose {
    font-weight: 600;
    display: flex;
    color: rgba(20, 20, 20);
}

.title .arrow {
    transform: rotate(90deg);
}

.item {
    background-color: white;
    padding: 30rpx 25rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e0e0e0;
}

.item .img {
    height: 150rpx;
    width: 150rpx;
    margin-right: 20rpx;
    margin-left: -5rpx;
}

.item image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.item .tags {
    display: flex;
    margin: 12rpx 0 0 0;
}

.item .tag {
    padding: 8rpx;
    margin: 0 5rpx;
    border: 1rpx solid rgb(255, 255, 255);
    background: rgb(89, 215, 224);
    color: rgb(255, 255, 255);
    border-radius: 90%;
    font-size: 23rpx;
}

.item .button {
    color: white;
    position: absolute;
    text-align: center;
    right: 60rpx;
    width: 100rpx;
    border: 1rpx solid;
    background-color: green;
}